<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bg_default"
    >
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="13dp"
        android:background="@color/bg_yellow"
        >
        <ImageView
            android:id="@+id/bank_list_iv_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_card"
            android:scaleType="centerCrop"
            />
        
        <TextView 
            android:id="@+id/bank_list_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bank_list_iv_logo"
            android:layout_marginLeft="13dp"
            android:layout_alignTop="@+id/bank_list_iv_logo"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:text="建设银行"
            />
        <TextView 
            android:id="@+id/bank_list_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bank_list_iv_logo"
            android:layout_marginLeft="13dp"
            android:layout_below="@+id/bank_list_tv_title"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:textColor="@color/text_white"
            android:text="储蓄卡"
            />
        
        <TextView 
            android:id="@+id/bank_list_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bank_list_iv_logo"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="**** **** **** 1314"
            />
        </RelativeLayout>

</RelativeLayout>
