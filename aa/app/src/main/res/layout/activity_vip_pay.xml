<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/vip_unpay_iv_head"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaultpic" />

                    <TextView
                        android:id="@+id/vip_unpay_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vip_unpay_iv_head"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="16dp"
                        android:singleLine="true"
                        android:text="美发大神成长六部曲"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/vip_unpay_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/vip_unpay_tv_title"
                        android:layout_below="@+id/vip_unpay_tv_title"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_look" />

                        <TextView
                            android:id="@+id/vip_detailtv_look"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="1024人观看"
                            android:textColor="@color/text_gray_title"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/icon_like"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/text_gray_title"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/vip_unpay_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/vip_unpay_ll"
                        android:layout_below="@+id/vip_unpay_ll"
                        android:layout_marginTop="24dp"
                        android:text="课程使用积分"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/vip_unpay_tv_cost_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/vip_unpay_cost"
                        android:layout_alignRight="@+id/vip_unpay_cost"
                        android:gravity="center"
                        android:layout_below="@+id/vip_unpay_cost"
                        android:layout_marginTop="3dp"
                        android:text="500"
                        android:textColor="@color/text_red"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/vip_detail_tv_signup"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_alignBottom="@+id/vip_unpay_tv_cost_new"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="35dp"
                        android:layout_toRightOf="@+id/vip_unpay_cost"
                        android:background="@drawable/bg_btn_sure_green"
                        android:gravity="center"
                        android:text="使用课程观看卡"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_off"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/vip_detail_tv_signup"
                        android:layout_marginTop="22dp"
                        android:background="@color/line_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_remark"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/line_off"
                        android:background="@color/bg_default"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/vip_tv_recommomt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/course_recommomt"
                            android:textColor="@color/text_gray_title"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/arrow_right" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_remark"
                        android:background="@color/line_gray" />

                    <!-- <org.soshow.beautyedu.widget.MyCustomListView
                        android:id="@+id/vip_free_myCustomListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line" >
                    </org.soshow.beautyedu.widget.MyCustomListView> -->
                    <LinearLayout
                        android:id="@+id/offline_free_myCustomListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:orientation="vertical"
                        />

                    <View
                        android:id="@+id/line_in"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/offline_free_myCustomListView"
                        android:layout_marginTop="8dp"
                        android:background="@color/line_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/line_in"
                        android:background="@color/bg_default"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/course_introduce"
                            android:textColor="@color/text_gray_title"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/arrow_right" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line_out"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_introduce"
                        android:background="@color/line_gray" />

                    <WebView
                        android:id="@+id/vip_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_out"
                        android:layout_marginBottom="50dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />
                </RelativeLayout>

                <include layout="@layout/loading" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>