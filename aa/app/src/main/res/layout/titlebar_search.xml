<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/bg_green"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/back_search"
        android:layout_width="@dimen/btn_size"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="35dp"
        android:onClick="searchClickHandler"
        android:scaleType="fitStart"
        android:src="@drawable/ico_fh" />

    <SearchView
        android:id="@+id/search_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/btn_pading"
        android:layout_toRightOf="@id/back_search"
        android:background="#00FFFFFF"
        android:iconifiedByDefault="true"
        android:inputType="textFilter"
        android:queryHint="@string/title_search_hint" />

</RelativeLayout>