<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_default"
    >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:background="@color/bg_white"
        >


        <ImageView
            android:id="@+id/iv_video_car"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/defaultpic"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_video_car_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_video_car"
            android:layout_marginLeft="6dp"
            android:layout_alignTop="@+id/iv_video_car"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:textColor="@color/text_gray_title"
            android:text="美匠VIP会员视频观看卡1000积分"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_video_car"
            android:layout_marginLeft="6dp"
            android:layout_alignBottom="@+id/iv_video_car"
            android:textSize="14sp"
            android:textColor="@color/text_gray_title"
            android:text="美匠VIP会员视频观看卡1000积分"
            android:layout_marginBottom="6dp"
            />
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_below="@+id/rl"
        android:background="@color/line_gray"
        />

</RelativeLayout>
