<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_list"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/line_first"
    android:padding="0dp" >

    <TextView
        android:id="@+id/title_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/btn_pading"
        android:background="@color/line_first"
        android:gravity="center"
        android:padding="0dp"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/word_grey"
        android:textSize="@dimen/buttonword_Size" />

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/course_item_size"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/title_selected"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/btn_pading"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="@dimen/item_fist_size"
        android:scaleType="fitCenter"
        android:src="@drawable/yx"
        android:visibility="gone" />

</RelativeLayout>