<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopActivity_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
     >

    <RelativeLayout
        android:id="@+id/relativw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="13dp"
        android:background="@drawable/item_pressed"
    android:descendantFocusability="blocksDescendants"
         >

        <ImageView
            android:id="@+id/shop_grid_item_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultpic" />
        

        <TextView
            android:id="@+id/shop_grid_item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_grid_item_img"
			android:layout_alignRight="@+id/shop_grid_item_img"            
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/shop_grid_item_tv_hot"
            android:layout_marginLeft="13dp"
            android:text="欧巴Oba无患子控油滋润滋养洗发水"
            android:textColor="@color/text_gray_deep"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/shop_grid_item_tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_grid_item_img"
            android:layout_marginTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            android:textStyle="normal"
            android:text="热销"
            android:background="@drawable/bg_btn_vip_deep_red"
             />

        <TextView
            android:id="@+id/shop_grid_item_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_grid_item_tv_title"
            android:layout_alignLeft="@+id/shop_grid_item_tv_hot"
            android:layout_marginTop="13dp"
            android:textColor="@color/text_red"
            android:textSize="12dp"
            android:textStyle="bold"
            android:text="￥288.3"
             />
        
        <TextView
            android:id="@+id/shop_grid_item_tv_payNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shop_grid_item_tv_title"
            android:layout_alignRight="@+id/shop_grid_item_img"
            android:layout_marginRight="6dp"
            android:layout_marginTop="13dp"
            android:textColor="@color/text_gray_title"
            android:textSize="12dp"
            android:text="2546人付款"
             />
    </RelativeLayout>

</RelativeLayout>