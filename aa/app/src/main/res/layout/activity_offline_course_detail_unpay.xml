<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/offline_unpay_iv_head"
                        android:layout_width="match_parent"
                        android:layout_height="238dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaultpic" />

                    <TextView
                        android:id="@+id/offline_unpay_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/offline_unpay_iv_head"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="16dp"
                        android:text="美发大神成长六部曲"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/offline_unpay_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/offline_unpay_tv_title"
                        android:layout_below="@+id/offline_unpay_tv_title"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_look" />

                        <TextView
                            android:id="@+id/tuwen_detailtv_look"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="1024人观看"
                            android:textColor="@color/text_gray_title"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/icon_like"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/text_gray_title"
                            android:textSize="12sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/offline_unpay_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/offline_unpay_ll"
                        android:layout_below="@+id/offline_unpay_ll"
                        android:layout_marginTop="24dp"
                        android:text="报名费用"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/offline_unpay_tv_cost_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/offline_unpay_cost"
                        android:layout_below="@+id/offline_unpay_cost"
                        android:gravity="left"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/offline_unpay_tv_cost_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/offline_unpay_cost"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/offline_unpay_tv_cost_old"
                        android:gravity="left"
                        android:textColor="@color/text_red"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/line_course_detail_tv_signup"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/offline_unpay_cost"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/bg_btn_sure_green"
                        android:gravity="center"
                        android:text="我要报名"
                        android:textColor="@color/text_white"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/line_off"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/line_course_detail_tv_signup"
                        android:layout_marginTop="22dp"
                        android:background="@color/line_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_remark"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/line_off"
                        android:background="@color/bg_default"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/off_line_free_tv_recommomt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/course_recommomt"
                            android:textColor="@color/text_gray_title"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/arrow_right" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_remark"
                        android:background="@color/line_gray" />

                    <!-- <ListView
                        android:id="@+id/offline_free_myCustomListView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/line" >
                    </ListView> -->
                    
                    <LinearLayout
                        android:id="@+id/offline_free_myCustomListView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:orientation="vertical"
                        />

                    <View
                        android:id="@+id/line_in"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/offline_free_myCustomListView"
                        android:layout_marginTop="8dp"
                        android:background="@color/line_gray" />

                    <RelativeLayout
                        android:id="@+id/rl_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_below="@+id/line_in"
                        android:background="@color/bg_default"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="left|center_vertical"
                            android:text="@string/course_introduce"
                            android:textColor="@color/text_gray_title"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/arrow_right" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/line_out"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/rl_introduce"
                        android:background="@color/line_gray" />

                    <WebView
                        android:id="@+id/line_course_detail_unPaywebView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_out" />
                </RelativeLayout>

                <include layout="@layout/loading" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>