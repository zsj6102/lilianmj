<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recomment_input_layout_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/pop_view_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:background="#00000000" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_above="@+id/ll"
        android:background="@color/line_gray" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            >

        <EditText
            android:id="@+id/pop_et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:background="#00000000"
            android:gravity="left"
            android:hint="发表评论"
            android:textColorHint="@color/line_gray"
            android:textColor="@color/text_gray"
            android:textSize="16sp" >
        </EditText>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/bg_green"
            />
        
        </LinearLayout>

        <TextView
            android:id="@+id/pop_tv_send"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_bg_tv_reply"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/text_gray_title"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>