<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/error_list"
    android:layout_width="match_parent"
    android:layout_height="@dimen/course_item_size"
    android:background="@color/white"
    android:padding="0dp" >

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/course_item_size"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/ico_mlx_collect"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/btn_pading"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="35dp"
        android:scaleType="fitStart"
        android:src="@drawable/ico_mlx" />

    <TextView
        android:id="@+id/title_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/btn_haflpading"
        android:layout_marginRight="80dp"
        android:layout_toRightOf="@id/ico_mlx_collect"
        android:background="@android:color/transparent"
        android:gravity="left"
        android:padding="0dp"
        android:text="标题"
        android:textColor="@color/word_grey_liu"
        android:textSize="@dimen/buttonword_Size" />

    <Button
        android:id="@+id/read_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/btn_pading"
        android:background="@drawable/captcha_btn_selector"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="查看"
        android:textColor="@color/white"
        android:textSize="@dimen/buttonword_Size" />

</RelativeLayout>