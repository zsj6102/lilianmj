<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
     >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line_buttom"
        android:layout_alignParentLeft="true"
          >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_white" >

                    <ImageView
                        android:id="@+id/shop_detail_iv"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/defaultpic" />

                    <TextView
                        android:id="@+id/shop_grid_item_tv_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/shop_detail_iv"
                        android:layout_marginLeft="13dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_btn_vip_deep_red"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="3dp"
                        android:text="热销"
                        android:textColor="@color/text_white"
                        android:textSize="12dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/shop_detail_tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/shop_detail_iv"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/shop_grid_item_tv_hot"
                        android:text="欧巴二代洗发水滋养护发素套装720G*2欧巴"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/shop_detail_tv_new_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/shop_detail_tv_name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:text="￥500"
                        android:textColor="@color/text_red"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/shop_detail_tv_new_price"
                        android:background="@drawable/bg_btn_vip_red"
                        android:layout_below="@+id/shop_detail_tv_name"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="@string/limit_buy"
                        android:textColor="@color/text_white"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/shop_detail_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/shop_detail_tv_new_price"
                        android:layout_below="@+id/shop_detail_tv_new_price"
                        android:layout_marginTop="6dp"
                        android:text="价格"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/shop_detail_tv_old_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/shop_detail_old_price"
                        android:layout_alignTop="@+id/shop_detail_old_price"
                        android:layout_toRightOf="@+id/shop_detail_old_price"
                        android:gravity="center"
                        android:text="￥600"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/shop_detail_tv_pay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/shop_detail_old_price"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/shop_detail_old_price"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:text="2451人购买"
                        android:textColor="@color/text_gray_title"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:layout_below="@+id/shop_detail_tv_old_price"
                        android:layout_marginTop="16dp"
                        android:background="@color/line_gray" />
                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/line_gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/bg_white" >

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:text="数量："
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/add_up_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/tv_num"
                        android:background="@drawable/input_increase"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/shoppingCard_ll_down"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_down" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shoppingCard_ll_edi"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center" >

                            <EditText
                                android:id="@+id/shoppingCard_edi_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_white"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="@color/text_gray"
                                android:textSize="16dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shoppingCard_ll_up"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_up" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.6dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/line_gray" />
                </RelativeLayout>

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginTop="13dp"
                    android:background="@color/line_gray" />

                <WebView
                    android:id="@+id/shop_detail_webView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     />
            </LinearLayout>
        </ScrollView>

        <include layout="@layout/loading" />
    </FrameLayout>

    <View
        android:id="@+id/line_buttom"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_above="@+id/shop_detail_bottom"
        android:background="@color/line_gray" />

    <LinearLayout
        android:id="@+id/shop_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shop_detail_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:drawableTop="@drawable/icon_shopping_cart_02"
            android:gravity="center"
            android:text="@string/shop_card"
            android:textSize="14dp" />

        <View
            android:layout_width="0.6dp"
            android:layout_height="match_parent"
            android:background="@color/line_gray" />

        <TextView
            android:id="@+id/shop_detail_tv_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/text_add_to_card"
            android:gravity="center"
            android:text="@string/add_to_card"
            android:textColor="@color/text_white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shop_detail_tv_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@color/text_deep_red"
            android:gravity="center"
            android:text="@string/right_on_pay"
            android:textColor="@color/text_white"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>