<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants"
     >

    <RelativeLayout
        android:id="@+id/recharge_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
         >

        <TextView
            android:id="@+id/recharge_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="3个月"
            android:textColor="@color/text_gray_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/recharge_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/recharge_tv_type"
            android:layout_centerVertical="true"
            android:text="￥88.00"
            android:textColor="@color/text_red"
            android:textSize="14sp" />
        
        <RelativeLayout
            android:id="@+id/recharge_rl_click_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            >

        <CheckBox
            android:id="@+id/recharge_iv_choose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_radio_button_on_selector"
            android:button="@null"
            android:focusable="true"
            android:clickable="true"
            />
        
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>