<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default" >

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_marginTop="13dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/shoppingCarItem_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:paddingRight="8dp"
        android:paddingLeft="13dp"
        android:background="@color/bg_white"
         >
         
        <TextView
            android:id="@+id/pay_detail_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:text="@string/pay_detail_order"
            android:visibility="gone"
            />
        
        <TextView
            android:id="@+id/pay_detail_tv_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pay_detail_order"
            android:layout_alignTop="@+id/pay_detail_order"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:text="21457484571245"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/shoppingCarItem_iv_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/pay_detail_order"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/defaultpic"
             />




        <TextView
            android:id="@+id/shoppingCarItem_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shoppingCarItem_iv_photo"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/shoppingCarItem_iv_photo"
            android:maxLines="2"
            android:textColor="@color/text_gray"
            android:textSize="14dp"
            android:text="美业VIP视频观看卡1000积分"
             />
        
        <TextView
            android:id="@+id/shoppingCarItem_tv_new_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shoppingCarItem_tv_name"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/shoppingCarItem_tv_name"
            android:text="￥500"
            android:textColor="@color/text_red"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/shoppingCarItem_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/shoppingCarItem_tv_new_money"
            android:layout_alignTop="@+id/shoppingCarItem_tv_new_money"
            android:gravity="center_horizontal"
            android:text="x2"
            android:textColor="@color/text_gray_title"
            android:textSize="14sp" />
    </RelativeLayout>

    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:paddingBottom="18dp"
        android:layout_below="@+id/shoppingCarItem_relative"
        android:background="@color/bg_white"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray" />
    
    
    
    
    <TextView
        android:id="@+id/tv_item_pay_allmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="12sp"
        android:textColor="@color/text_gray_title"
        android:text="@string/pay_detail_allmoney"
        />
    
    <TextView
        android:id="@+id/tv_item_shoping_card_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_item_pay_allmoney"
        android:textSize="12sp"
        android:textColor="@color/text_gray_title"
        android:text="￥542.2"
        />
    
    <TextView
        android:id="@+id/tv_item_shoping_paymoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_pay_allmoney"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:text="@string/pay_detail_paymoney"
        />
    
    <TextView
        android:id="@+id/tv_item_detail_paymoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_item_shoping_paymoney"
        android:textSize="14sp"
        android:textColor="@color/text_red"
        android:text="￥542.2"
        />
    
    </RelativeLayout>
    
    

</RelativeLayout>