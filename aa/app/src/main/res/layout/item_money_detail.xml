<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:paddingBottom="16dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="16dp" >

        <TextView
            android:id="@+id/money_detail_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行提现"
            android:textColor="@color/text_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/money_detail_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/money_detail_tv_title"
            android:layout_below="@+id/money_detail_tv_title"
            android:layout_marginTop="8dp"
            android:text="2016-12-04"
            android:textColor="@color/text_gray_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/money_detail_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="-2000"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_below="@+id/rl"
        android:background="@color/line_gray" />

</RelativeLayout>