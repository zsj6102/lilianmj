<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_pressed_light" >

    <ImageView
        android:id="@+id/record_pic"
        android:layout_width="112dp"
        android:layout_height="69dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/btn_superpading"
        android:layout_marginLeft="@dimen/btn_pading"
        android:layout_marginTop="@dimen/btn_superpading"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="70dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/btn_pading"
        android:layout_marginRight="@dimen/btn_pading"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/record_pic"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/text_gray_title"
        android:textSize="@dimen/videolist_tab_Size" />
    <LinearLayout
        android:id="@+id/item_courst_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/record_title"
        android:layout_alignLeft="@+id/record_title"
        android:layout_marginTop="3dp"
        >
    <TextView 
        android:id="@+id/course_list_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="@color/text_white"
        android:text="已购买"
        android:background="@drawable/shape_bg_green"
        />
    
    <TextView 
        android:id="@+id/course_list_RMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_list_state"
        android:layout_marginLeft="13dp"
        android:layout_alignTop="@+id/course_list_state"
        android:layout_alignBottom="@+id/course_list_state"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/text_gray_title"
        android:text="RMB:"
        />

    <TextView 
        android:id="@+id/course_list_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_list_RMB"
        android:layout_marginLeft="6dp"
        android:layout_alignTop="@+id/course_list_RMB"
        android:layout_alignBottom="@+id/course_list_state"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/text_gray_title"
        android:text="9.0"
        />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/item_courst_ll_b"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/item_courst_ll"
        android:layout_toRightOf="@id/record_pic"
        android:layout_marginLeft="@dimen/btn_pading"
        android:layout_marginTop="@dimen/btn_haflpading"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        >
    <ImageView 
        android:id="@+id/course_list_iv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_look"
        />
    
    <TextView
        android:id="@+id/record_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:textColor="@color/text_gray_title"
        android:textSize="@dimen/warnword_Size" />
    
    <ImageView 
        android:id="@+id/course_list_iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:src="@drawable/icon_like"
        android:visibility="invisible"
        />
    
    <TextView
        android:id="@+id/course_list_tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_list_iv_like"
        android:layout_alignTop="@+id/course_list_iv_like"
        android:layout_alignBottom="@+id/course_list_iv_like"
        android:gravity="center"
        android:textColor="@color/text_gray_title"
        android:textSize="14sp"
        android:text="98"
        android:visibility="invisible"
        />
    
    <ImageView 
        android:id="@+id/course_list_iv_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_list_tv_like"
        android:layout_marginLeft="13dp"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/record_count"
        android:src="@drawable/icon_information"
        android:visibility="invisible"
        />
    
    <TextView
        android:id="@+id/course_list_tv_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/course_list_iv_say"
        android:layout_alignTop="@+id/course_list_iv_like"
        android:layout_alignBottom="@+id/course_list_iv_like"
        android:gravity="center"
        android:textColor="@color/text_gray_title"
        android:textSize="14sp"
        android:text="98"
        android:visibility="invisible"
        />
    
    </LinearLayout>

    <TextView
        android:id="@+id/chapter_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/btn_superpading"
        android:layout_marginLeft="@dimen/btn_pading"
        android:layout_marginRight="@dimen/btn_pading"
        android:layout_marginTop="@dimen/btn_superpading"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/word_grey"
        android:textSize="@dimen/normalword_Size" />

    <LinearLayout
        android:id="@+id/chapter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_new"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/chapter_title_f"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="@dimen/btn_pading"
            android:layout_marginLeft="@dimen/btn_pading"
            android:layout_marginRight="@dimen/btn_pading"
            android:layout_marginTop="@dimen/btn_pading"
            android:layout_weight="1"
            android:padding="0dp"
            android:singleLine="true"
            android:textColor="@color/word_grey"
            android:textSize="@dimen/videolist_tab_Size" />
    </LinearLayout>

    <TextView
        android:id="@+id/course_continue"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/record_title"
        android:layout_marginRight="@dimen/btn_haflpading"
        android:layout_marginTop="@dimen/btn_haflpading"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/word_grey"
        android:textSize="@dimen/warnword_Size" />

    <ImageView
        android:id="@+id/lecture_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/record_title"
        android:layout_marginRight="@dimen/btn_haflpading"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/course_continue"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="20dp"
        android:scaleType="fitCenter" />

    <View
        android:id="@+id/divider_p"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_mid" />

</RelativeLayout>