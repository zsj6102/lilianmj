<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/error_list"
    android:layout_width="match_parent"
    android:layout_height="@dimen/course_item_size"
    android:background="@color/white"
    android:padding="0dp" >

    <TextView
        android:id="@+id/title_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/btn_pading"
        android:layout_marginTop="@dimen/margin_item_size"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="0dp"
        android:text="标题"
        android:textColor="@color/word_grey"
        android:textSize="@dimen/buttonword_Size" />

    <TextView
        android:id="@+id/count_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_item_size"
        android:layout_marginTop="@dimen/margin_item_size"
        android:layout_toRightOf="@id/title_error"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="0dp"
        android:text="数量"
        android:textColor="@color/green_my"
        android:textSize="@dimen/normalword_Size" />

    <TextView
        android:id="@+id/error_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title_error"
        android:layout_marginLeft="@dimen/btn_pading"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="0dp"
        android:text="日期"
        android:textColor="@color/word_grey_liu"
        android:textSize="@dimen/normalword_Size" />

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/course_item_size"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/read_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/btn_pading"
        android:background="@drawable/captcha_btn_selector"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="查看"
        android:textColor="@color/white"
        android:textSize="@dimen/buttonword_Size" />

</RelativeLayout>