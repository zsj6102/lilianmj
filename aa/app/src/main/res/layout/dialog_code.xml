<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <EditText
        android:id="@+id/code_local"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/btn_doublepading"
        android:layout_marginRight="@dimen/btn_doublepading"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:digits="@string/code_digits"
        android:gravity="left|center_vertical"
        android:hint="验证码"
        android:maxLength="4"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/inputword_Size" />

    <ImageView
        android:id="@+id/code_pic"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/btn_doublepading"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxHeight="45dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/code_change"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/btn_doublepading"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onClick"
        android:text="看不清,换一张"
        android:textColor="#0080FF"
        android:textSize="@dimen/warnword_Size" />

</LinearLayout>